{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "esnext",
    "lib": ["esnext"],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "inlineSourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "types" : ["node", "graphql"]
